<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="7dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        android:elevation="15dp"
        app:cardBackgroundColor="#3591C3"
        >
       <GridLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:columnCount="2"
           android:paddingHorizontal="7dp"
           android:paddingVertical="7dp"
           >
           <LinearLayout
               android:layout_columnSpan="2"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               >
               <TextView
                   android:id="@+id/vorder_name"
                   android:layout_weight="8"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Blood Test"
                   android:fontFamily="@font/amaranth"
                   android:textSize="25sp"
                   />
               <TextView
                   android:layout_weight="2"
                   android:id="@+id/vorder_type"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="M"
                   android:paddingHorizontal="3dp"
                   android:textColor="@color/colorRed"
                   android:gravity="end"
                   android:layout_marginEnd="7dp"
                   android:fontFamily="@font/amaranth"
                   android:textSize="25sp"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_row="1"
               android:layout_column="0"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Price : $"
                   android:fontFamily="@font/amaranth"
                   android:textSize="20sp"
                   />
               <TextView
                   android:id="@+id/vorder_price"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="800"
                   android:textSize="25sp"
                   android:fontFamily="@font/aldrich"
                   />
           </LinearLayout>
           <androidx.cardview.widget.CardView
               android:layout_column="1"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               app:cardCornerRadius="15dp"
               app:cardBackgroundColor="#144F70"
               android:layout_gravity="end">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:orientation="horizontal"
                   android:paddingHorizontal="15dp"
                   >
                   <TextView
                       android:textSize="15sp"
                       android:textColor="@color/white"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/amaranth"
                       android:text="UID :"
                       />

                   <TextView
                       android:id="@+id/vorder_id"
                       android:textColor="@color/white"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="15sp"
                       android:text="12017539"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>
       </GridLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>